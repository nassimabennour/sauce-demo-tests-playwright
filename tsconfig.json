{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "types": ["node", "@playwright/test"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
    // si l'erreur persiste, ajoute: "verbatimModuleSyntax": false
  },
  "include": [
    "features/**/*.ts",
    "steps/**/*.ts",
    "bdd.config.ts",
    "playwright.config.ts"
  ]
}
